# Telegram Bot Configuration
# Получите токен бота у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ID группы в Telegram (отрицательное число, например -5201502692)
# Получить ID можно через бота @getidsbot в группе
TELEGRAM_CHAT_ID=-5201502692

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# Или используйте отдельные переменные:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=your_database
# DB_USER=your_user
# DB_PASSWORD=your_password

# Server Configuration
PORT=3000
BASE_URL=https://bizon-business.ru
